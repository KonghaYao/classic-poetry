---
import Layout from '../../layouts/Layout.astro'
import {ShowSinglePoetry} from '../../components/Poetry/ShowSinglePoetry'
import {getClient} from '../../meilisearch/getClient'
const {id} = Astro.params
const {hits} = await getClient().index("poetry").search(id)
const data = hits[0]||{}
---

<Layout title={data?.title+' 中华诗词大典'}>
    <ShowSinglePoetry poetry={data} ></ShowSinglePoetry>
</Layout>